ARG LATEX_IMAGE_TAG=latest-ubuntu
FROM pandoc/latex:$LATEX_IMAGE_TAG

RUN tlmgr list
RUN tlmgr update --self && \
    tlmgr install \
    merriweather \
    fontaxes \
    mweights \
    mdframed \
    needspace \
    sourcesanspro \
    sourcecodepro \
    titling \
    ly1 \
    pagecolor \
    adjustbox \
    collectbox \
    titlesec \
    fvextra \
    pdftexcmds \
    footnotebackref \
    zref \
    fontawesome5 \
    footmisc \
    sectsty \
    koma-script \
    lineno \
    awesomebox \
    background \
    everypage \
    xurl \
    epstopdf \
    tcolorbox \
    environ

RUN apt-get update
RUN apt-get install -yy python3 python3-pip
RUN pip3 install pandoc-latex-environment
